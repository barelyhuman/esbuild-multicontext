{
  "name": "esbuild-multicontext",
  "description": "Minimal wrapper over esbuild's context API",
  "version": "0.9.0-beta.1",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./watcher": {
      "types": "./dist/types/watcher.d.ts",
      "import": "./dist/esm/watcher.mjs",
      "require": "./dist/cjs/watcher.js"
    },
    "./cjs": "./dist/esm/index.js",
    "./esm": "./dist/esm/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsx build.js",
    "dev": "tsx build.js --dev",
    "fix": "prettier --write .",
    "next": "bumpp",
    "test": "uvu",
    "test:ci": "c8 uvu",
    "prepare": "npm run build"
  },
  "prettier": "@barelyhuman/prettier-config",
  "dependencies": {
    "chokidar": "^3.6.0",
    "defu": "^6.1.3",
    "esbuild": "^0.20.1",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@barelyhuman/prettier-config": "^1.1.0",
    "@types/node": "^20.10.2",
    "bumpp": "^9.2.0",
    "c8": "^9.1.0",
    "prettier": "^3.1.0",
    "tsc-prog": "^2.3.0",
    "tsx": "^4.6.1",
    "typescript": "^5.3.2",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
